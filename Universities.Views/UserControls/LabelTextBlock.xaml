<UserControl x:Class="Universities.Views.UserControls.LabelTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Universities.Views.UserControls"
             mc:Ignorable="d" d:DesignHeight="40" d:DesignWidth="200">
    <TextBlock Padding="2" VerticalAlignment="Bottom" HorizontalAlignment="Left"
               Text="{Binding (local:LabelTextBlock.Label)}"/>
</UserControl>