<UserControl x:Class="Universities.Views.UserControls.TextBoxLabeled"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Universities.Views.UserControls"
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Padding="2" VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="{Binding (local:TextBoxLabeled.Label)}"/>
        <TextBox x:Name="TextBox" Grid.Row="1" Padding="2" VerticalContentAlignment="Top" Text="{Binding (local:TextBoxLabeled.Text)}" TextChanged="TextBox_TextChanged"/>
    </Grid>
</UserControl>