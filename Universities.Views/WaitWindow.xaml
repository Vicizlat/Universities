<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Universities.Views.WaitWindow"
        Width="500" Height="100" ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterScreen" BorderBrush="Black" BorderThickness="1">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="30" HorizontalAlignment="Center" Text="Моля, изчакайте..."/>
        <TextBlock x:Name="TextBlock" Grid.Row="1" HorizontalAlignment="Center"/>
    </Grid>
</Window>