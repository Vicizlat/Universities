<Window x:Class="Universities.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:Universities.Views.UserControls"
        xmlns:images="clr-namespace:Universities.Views.Images"
        mc:Ignorable="d" FontSize="18"
        Title="MainWindow" Height="500" MinHeight="500" Width="900" MinWidth="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10, 0, 10, 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <images:ButtonImage Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" FileName="SettingsIcon" ToolTip="Settings" HorizontalAlignment="Right"
                            Source="Images\SettingsIconBW.png" MouseLeftButtonUp="SettingsImage_MouseLeftButtonUp"/>
        <uc:LabelTextBlock Grid.Row="0" Grid.Column="0" Margin="10, 0" Label="WOS Document:"/>
        <uc:LabelTextBlock Grid.Row="0" Grid.Column="1" Margin="10, 0" Label="SeqNo:"/>
        <TextBox x:Name="Wos" Grid.Row="1" Grid.Column="0" Margin="10, 0" Padding="2"/>
        <TextBlock x:Name="SeqNo" Grid.Row="1" Grid.Column="1" Margin="10, 0" Padding="2" HorizontalAlignment="Left"/>
        <uc:LabelTextBlock Grid.Row="2" Grid.Column="0" Margin="10, 0" Label="Author:"/>
        <uc:LabelTextBlock Grid.Row="2" Grid.Column="1" Margin="10, 0" Label="Address:"/>
        <TextBox x:Name="Author" Grid.Row="3" Grid.Column="0" Margin="10, 0" Padding="2"/>
        <TextBox x:Name="Address" Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Margin="10, 0" Padding="2"/>
        <uc:LabelTextBlock Grid.Row="4" Grid.Column="0" Margin="10, 0" Label="Organization Names:"/>
        <uc:LabelTextBlock Grid.Row="4" Grid.Column="1" Margin="10, 0" Label="SubOrganization Names:"/>
        <TextBox x:Name="OrganizationNames" Grid.Row="5" Grid.Column="0" Margin="10, 0" Padding="2"/>
        <TextBox x:Name="SubOrganizationNames" Grid.Row="5" Grid.Column="1" Margin="10, 0" Padding="2"/>
        <uc:LabelTextBlock Grid.Row="6" Grid.Column="0" Margin="10, 0" Label="Select Organization:"/>
        <Grid Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="SelectOrganization" Grid.Column="0" Margin="10, 0" Padding="2" VerticalContentAlignment="Center"
                      SelectionChanged="SelectOrganization_OnSelectionChanged"/>
            <Button x:Name="AddOrganization" Grid.Column="1" Content="Add Organization" Margin="10, 0" Padding="2"
                    Click="AddOrganization_OnClick"/>
        </Grid>
        <Grid Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Margin="0, 20, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="PreviousButton" Grid.Column="0" Margin="10, 0" Padding="2" Click="PreviousButton_OnClick"/>
            <Button x:Name="SaveButton" Grid.Column="1" Margin="10, 0" Padding="2" Content="Save" Click="SaveButton_OnClick"/>
            <Button x:Name="NextButton" Grid.Column="2" Margin="10, 0" Padding="2" Click="NextButton_OnClick"/>
        </Grid>
    </Grid>
</Window>